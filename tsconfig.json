{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "target": "ES2021",
    "module": "ES2020",
    "rootDir": "src",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ES2021", "esnext", "dom", "es6", "dom.iterable"],
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "noEmit": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false
  },
  "include": ["src"],
  "exclude": ["test/*.ts", "dist"],
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "moduleTypes": {
      "package.json": "cjs",
      "src/*": "cjs"
    }
  }
}
