{
  "name": "build-lambda-layer",
  "version": "0.3.8",
  "description": "Build node awesome lambda layers with controls ðŸ•¹",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "build-lambda-layer": "dist/index.cjs",
    "build-layer": "dist/index.cjs"
  },
  "scripts": {
    "build": "pnpm run clean && (pnpm run build:util; pnpm run build:declarations)",
    "build:util": "tsup src/index.ts --format esm,cjs",
    "build:declarations": "tsc --project tsconfig.declarations.json",
    "clean": "rimraf dist",
    "cmd:quick-test": "ts-node src/index.ts foo --debug --output 'layer/'",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepublishOnly": "pnpm build",
    "release": "release-it",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "update": "codependence --update"
  },
  "author": "Jeff Wainwright <yowainwright@gmail.com> (https://jeffry.in)",
  "license": "MIT",
  "dependencies": {
    "commander": "9.4.1",
    "compare-versions": "^5.0.3",
    "cosmiconfig": "^8.1.0",
    "fast-glob": "3.2.12",
    "fs-extra": "11.1.0",
    "gradient-string": "2.0.2",
    "validate-npm-package-name": "^5.0.0",
    "zip-a-folder": "^1.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "17.3.0",
    "@commitlint/config-conventional": "17.3.0",
    "@commitlint/prompt-cli": "17.3.0",
    "@types/fs-extra": "^9.0.13",
    "@types/gradient-string": "^1.1.2",
    "@types/node": "18.11.10",
    "@types/rimraf": "^3.0.2",
    "@types/validate-npm-package-name": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "5.45.0",
    "@typescript-eslint/parser": "5.45.0",
    "codependence": "^0.2.6",
    "eslint": "8.28.0",
    "eslint-config-prettier": "^8.6.0",
    "prettier": "2.8.0",
    "release-it": "15.5.0",
    "rimraf": "^3.0.2",
    "stdouttojson": "^0.7.1",
    "ts-node": "^10.9.1",
    "tslib": "2.4.1",
    "tsup": "6.5.0",
    "tsutils": "^3.21.0",
    "typescript": "4.9.3",
    "vite": "3.2.4",
    "vitest": "^0.25.8"
  },
  "keywords": [
    "nodejs",
    "aws",
    "lambda",
    "aws-lambda",
    "lambda-layers"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/build-lambda-layer.git"
  },
  "homepage": "https://github.com/yowainwright/build-lambda-layer#readme",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0"
  }
}
