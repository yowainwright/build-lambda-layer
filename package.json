{
  "name": "build-lambda-layer",
  "version": "0.2.0",
  "description": "Build node awesome lambda layers with controls ðŸ•¹",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "build-lambda-layer": "dist/index.cjs",
    "build-layer": "dist/index.cjs"
  },
  "scripts": {
    "build": "pnpm run clean && (pnpm run build:util; pnpm run build:declarations)",
    "build:util": "tsup src/index.ts --format esm,cjs",
    "build:declarations": "tsc --project tsconfig.declarations.json",
    "clean": "rimraf dist",
    "cmd:quick-test": "ts-node src/index.ts foo --debug",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepublishOnly": "pnpm build",
    "release": "release-it",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "author": "Jeff Wainwright <yowainwright@gmail.com> (https://jeffry.in)",
  "license": "MIT",
  "dependencies": {
    "commander": "^9.4.0",
    "compare-versions": "^5.0.1",
    "cosmiconfig": "^7.0.1",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "gradient-string": "^2.0.1",
    "zip-a-folder": "^1.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@commitlint/prompt-cli": "^17.0.3",
    "@types/fs-extra": "^9.0.13",
    "@types/gradient-string": "^1.1.2",
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1",
    "release-it": "^15.4.0",
    "rimraf": "^3.0.2",
    "stdouttojson": "^0.6.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.0",
    "tsup": "^6.2.2",
    "tsutils": "^3.21.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.9",
    "vitest": "^0.22.1"
  },
  "keywords": [
    "nodejs",
    "aws",
    "lambda",
    "aws-lambda",
    "lambda-layers"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/build-lambda-layer.git"
  },
  "homepage": "https://github.com/yowainwright/build-lambda-layer#readme",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0"
  }
}
